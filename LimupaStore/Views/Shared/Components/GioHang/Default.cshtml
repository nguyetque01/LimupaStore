@model GioHangViewModel
<div class="hm-minicart-trigger">
    <span class="item-icon"></span>
    <span class="item-text">
        <span class="cart-item-count">@Model.DsGioHang.Count()</span>
    </span>
</div>
<span></span>
<div class="minicart">    
    <ul class="minicart-product-list">
        @foreach (var item in Model.DsGioHang)
        {
            <li>
                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-sanphamId=@item.SanPhamId class="minicart-product-image">
                    <img src="~/@item.SanPhamViewModel.Image[0].ImageURL" alt="cart products">
                </a>
                <div class="minicart-product-details">
                    <h6><a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-sanphamId=@item.SanPhamId>@item.SanPham.Name</a></h6>
                    <span>@String.Format("{0:0,0}", item.ProductPrice) VND x @item.Quantity</span>
                </div>
                <a asp-area="Customer" asp-controller="GioHang" asp-action="Xoa" asp-route-giohangId=@item.Id class="close" title="Remove">
                    <i class="fa fa-close"></i>
                </a>
            </li>
        }
    </ul>
    @if(Model.DsGioHang.Count() == 0) {
        <div style:"padding: 0 45px">
            <img src="~/images/cart/empty-cart.png" width="100%">
            <div class="minicart-button">
                <a asp-area="Customer" asp-controller="Home" asp-action="Shop" class="li-button li-button-fullwidth">
                    <span>Go To Shop</span>
                </a>
            </div>
        </div>
    } else {
        <p class="minicart-total">SUBTOTAL: <span>@String.Format("{0:0,0}", Model.HoaDon.Total) VND</span></p>
        <div class="minicart-button">
            <a asp-area="Customer" asp-controller="GioHang" asp-action="Index" class="li-button li-button-fullwidth">
                <span>View Full Cart</span>
            </a>
            <a asp-area="Customer" asp-controller="GioHang" asp-action="ThanhToan" class="li-button li-button-fullwidth li-button-dark">
                <span>Checkout</span>
            </a>
        </div>
    }
    
</div>



